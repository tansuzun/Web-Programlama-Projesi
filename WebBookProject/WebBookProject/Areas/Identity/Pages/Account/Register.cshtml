@page
@model RegisterModel
@{
    ViewData["Title"] = "Kaydol";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    @*<title>Sign Up</title>*@

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">
    <link href="~/Login/css/style.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <!-- Sign up form -->
    <section class="signup">
        <div class="signup-content">
            <div class="signup-form" style="padding-top:30px;">
                <h2 class="form-title">Kaydol</h2>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Input.Name" class="form-control" id="name" placeholder="İsim" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Surname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Input.Surname" class="form-control" id="name" placeholder="Soyisim" />
                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" id="email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Şifre" id="pass" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" class="form-control" placeholder="Şifrenizi yeniden giriniz" id="re_pass" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group form-button">
                        <input class="btn btn-dark" style="color:white" type="submit" name="signin" id="signin" class="form-submit" value="Kaydol" />
                    </div>

                </form>
            </div>
            <div class="signup-image">
                <figure>
                    <img src="~/Login/images/signupimage.jpg" />
                </figure>
                <a asp-area="Identity" asp-page="/Account/Login" class="signup-image-link">Zaten üye misiniz? Giriş yapın.</a>
            </div>
        </div>
    </section>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
