@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";

}

<!------ Include the above in your HEAD tag ---------->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    @*<title>Sign Up</title>*@

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="css/style.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/Login/css/style.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <!-- Sing in  Form -->
    <section class="sign-in">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/Login/images/signinimage.jpg" alt="sign in image"></figure>
            </div>

            <div class="signin-form" style="padding-top:50px;">
                <h2 class="form-title">Giris Yap</h2>
                <form method="POST" class="register-form" id="login-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Input.Email" id="your_name" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Input.Password" id="your_pass" placeholder="Şifre" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                
                    <div class="form-group form-button">
                        <input class="btn btn-dark" style="color:white" type="submit" name="signin" id="signin" class="form-submit" value="Giriş Yap" />
                    </div>
                   
                </form>

            </div>
        </div>
    </section>


    <!-- JS -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
 
</body>
</html>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
