            </div>
        </div>*@

    <nav class="navbar navbar-expand-lg navbar ftco_navbar bg-light ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="img-responsive2" src="~/Navbar/lotus.png"  asp-area="" asp-controller="Home" asp-action="Index" style=" width: 65px;"><small style="color:black"><b>Lotus Kitap</b></small></a>
            <form action="#" class="searchform order-sm-start order-lg-last">
                @*<div class="form-group d-flex">
