                    <button type="submit" placeholder="" class="form-control search"><span class="fa fa-search"></span></button>
                </div>*@
            </form>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa fa-bars"></span> Menu
            </button>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav m-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="ListCategories" asp-action="ListCategory">Kategori</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Publishers" asp-action="Index">Yayınevi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="ListBooks" asp-action="ListBook">Kitap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Authors" asp-action="Index">Yazar</a>

                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown04">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Categories" asp-action="Index">Kategoriler</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Books" asp-action="Index">Kitaplar</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Authors" asp-action="Index">Yazarlar</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Publishers" asp-action="Index">Yayınevleri</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>

            @if (SignInManager.IsSignedIn(User))
            {
                <div class="header__top__right__auth">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hoş geldiniz, @User.Identity.Name!</a>
                </div>
                <div class="header__top__right__auth">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn text-dark">Çıkış</button>
                    </form>
                </div>
            }
            else
            {
                <div class="header__top__right__auth">
                    <a asp-area="Identity" asp-page="/Account/Register"><i class="fa fa-user"></i><i> </i>Kaydol<i>  </i> </a>
                </div>
                <div class="header__top__right__auth">
                    <a asp-area="Identity" asp-page="/Account/Login"><i>  </i><i class="fa fa-sign-in"></i><i> </i>Giriş Yap</a>
                </div>
            }


        </div>
    </nav>
    <!-- END nav -->
    @*</section>*@




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - KitapProjesi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*  <script src="~/js/site.js" asp-append-version="true"></script>*@

    <script src="~/website-menu-13/js/main.js"></script>
    <script src="~/website-menu-13/js/bootstrap.min.js"></script>
    <script src="~/website-menu-13/js/popper.js"></script>
    <script src="~/website-menu-13/js/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




